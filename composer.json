{
    "name": "atlance/jwt-core",
    "description": "Decorator of `lcobucci/jwt` 3.x library",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "JWT",
        "JWS"
    ],
    "authors": [
        {
            "name": "Anton Stepanov",
            "email": "lanposts@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "lcobucci/jwt": "^3.2"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.28",
        "friendsofphp/php-cs-fixer": "^3.38",
        "overtrue/phplint": "^3.4",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpstan/phpstan-strict-rules": "^1.5",
        "phpunit/phpunit": "^9.6",
        "vimeo/psalm": "^5.15"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Atlance\\JwtCore\\": ""
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "fix": "vendor/bin/php-cs-fixer fix --config .php_cs.dist.php",
        "php-analyze": [
            "@phplint",
            "@phpstan",
            "@psalm"
        ],
        "phplint": "vendor/bin/phplint -c phplint.yaml.dist",
        "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon.dist --no-progress --memory-limit=-1",
        "psalm": "vendor/bin/psalm -c psalm.xml.dist --no-cache --threads=6 --memory-limit=-1",
        "tests": "XDEBUG_MODE=coverage vendor/bin/phpunit -c phpunit.xml.dist --coverage-clover ./clover.xml"
    }
}
