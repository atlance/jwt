version: "3.9"

services:
  php-cli:
    build:
      context: ./docker
      dockerfile: php-cli/php-cli.dockerfile
      args:
        php_cli_image: ${PHP_CLI_IMAGE}
        app_dir: ${APP_DIR}
        user: ${USER}
        uid: ${UID}
    env_file: [ .env ]
    volumes:
      - ./:${APP_DIR}:rw

networks:
  backend:
